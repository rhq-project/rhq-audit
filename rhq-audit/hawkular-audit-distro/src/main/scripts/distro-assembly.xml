<?xml version="1.0" encoding="UTF-8"?>

<assembly>
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>${project.build.finalName}</baseDirectory>

    <fileSets>
        <!-- all non-binary files -->
        <fileSet>
            <directory>${project.build.directory}/distro-resources</directory>
            <outputDirectory>/wildfly-${version.org.wildfly}</outputDirectory>
            <excludes>
                <exclude>bin/*.sh</exclude>
                <exclude>bin/*.bat</exclude>
            </excludes>
            <filtered>false</filtered>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>org.hawkular.nest:hawkular-nest-distro</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <!-- exclude unwanted stuff and exclude stuff we want to overlay via our own distro-resources -->
                <excludes>
                    <exclude>wildfly-${version.org.wildfly}/standalone/configuration/standalone.xml</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>

        <!-- all dependency jars that go in the modules directory -->
        <dependencySet>
            <outputDirectory>wildfly-${version.org.wildfly}/modules/system/layers/base/org/hawkular/nest/main/deployments</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>org.hawkular.audit:hawkular-audit-war</include>
            </includes>
            <unpack>false</unpack>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </dependencySet>
    </dependencySets>
    
</assembly>

